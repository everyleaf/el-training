<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Tasks</h1>
    <button id="logout" class="btn btn-outline-secondary">Login</button>
  </div>
  <% if @tasks.any? %>
    <input type="text" class="form-control w-25" placeholder="Search" id="search">
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">Label</th>
          <th scope="col">Title</th>
          <th scope="col">Assignee</th>
          <th scope="col">DueDate</th>
          <th scope="col">Status</th>
          <th scope="col">Priority</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td>Labels</td>
            <td><%= link_to task.title, task_path(task) %></td>
            <td>Ryu</td>
            <td>0000/00/00</td>
            <td>Not started</td>
            <td>Low</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center">タスクがありません。</p>
  <% end %>
  <div class="d-flex justify-content-end">
    <%= link_to "Add", new_task_path, class:"btn btn-primary" %>
  </div>
</div>
