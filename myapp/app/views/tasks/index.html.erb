<div name='header'>
  <div name='message-area'>
    <%= notice %>
  </div>
  <h1><%= I18n.t('view_title.index') %></h1>
</div>
<div name='content'>
  <div name='create-task'>
      <%= link_to(I18n.t('link.create'), new_task_path) %>
  </div>
  <div name='serch-task'>

  </div>
  <div name='list-task'>
    <table>
      <thead>
        <tr>
          <th><%= I18n.t('task.title') %></th>
          <th><%= I18n.t('task.label') %></th>
          <!-- user対応コメントアウト -->
          <!-- <th>担当者</th> -->
          <!-- status対応コメントアウト -->
          <!-- <th>状況</th> -->
          <th><%= I18n.t('task.created_at') %></th>
          <th></th>
        </tr>
      <thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><span><%= task.title %></span></td>
            <td><span><%= task.label %></span></td>
            <!-- user対応コメントアウト -->
            <!-- <td><span><%#= task.user.name %></span></td> -->
            <!-- status対応コメントアウト -->
            <!-- <td><span><%#= get_status_view(task.status) %></span></td> -->
            <td><span><%= l(task.created_at) %></span></td>
            <td><%= link_to(I18n.t('link.detail'), task_path(task)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div name='footer'>
</div>
