<h1><%= Label.model_name.human %></h1>

<div>
  <%= link_to I18n.t('tasks_index'), tasks_url %>
</div>

<%= form_for(@label) do |f| %>
  <%= f.label      :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.submit '作成', class: "btn btn-primary" %>
<% end %>

<ul class="labels">
  <% @labels.each do |l| %>
    <div>
      <span>
        <%= l.name %>
      </span>
      <span>
      <%= link_to '名前を変更', '' , class: "edit_label_#{l.id}"%>
      </span>
      <span>
        <%= button_to '削除', l, method: :delete,class: "delete_label_#{l.id}",
                      form: {data: {turbo_confirm: I18n.t('message_before_delete')} }%>
      </span>
    </div>
  <% end %>
</ul>