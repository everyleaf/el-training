<div class = "col-md-offset-1">
  <span><%= link_to "一覧に戻る",  task_url      %></span>
  <span><%= link_to "編集",       edit_task_path%></span>
  <span>
    <%= button_to "タスクを削除", @task, method: :delete %> 
    <!-- TODO: 削除時に確認ポップアップを出す -->
  </span>
</div>

<br>

<div class="row">
  <div class="col-md-8 col-md-offset-1">
  
    <div>
      <span>タスク名</span>
      <%=@task.name%>
    </div>

    <% if @task.description.present? %>
      <div>
        <span>説明</span>
        <%= @task.description %>
      </div>
    <% end %>

    <div>
      <span>必要日数</span>
      <%= @task.necessary_days %>日
    </div>

    <div>
      <span>取り掛かり期間</span>
      <%= @task.start_date %> ~ <%= @task.start_date+@task.necessary_days %>
    </div>

    <div>
      <span>実行状況</span>
      <%= @task.progress %>
    </div>
    
    <div>
      <span>重要度</span>
      <%= @task.priority %>
    </div>
  </div>
</div>