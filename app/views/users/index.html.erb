<h1><%= I18n.t('user_index') %></h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <div>
        <span><%= user.name%></span>
        <span><%= link_to I18n.t('detail'),  user %></span>
        <span>
          <%= button_to I18n.t('delete_user'), user, method: :delete,
                      form: {data: {turbo_confirm: I18n.t('message_before_delete')} } %> 
        </span>
      </div>
    </li>
  <% end %>
</ul>