<h1><%= "カテゴリ名の変更" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.submit '名前を変更', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class = "col-md-offset-3">
  <%=link_to  'キャンセル', categories_url %>
</div>